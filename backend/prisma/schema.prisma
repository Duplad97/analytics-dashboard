datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
    id             Int      @id @default(autoincrement())
    name           String
    email          String   @unique
    currentStageId Int
    createdAt      DateTime @default(now())
    updatedAt      DateTime @updatedAt
}

model FunnelStage {
    id    Int    @id @default(autoincrement())
    name  String @unique
    order Int // Order in the funnel (1 = first stage, etc.)
}

model Log {
    id        Int      @id @default(autoincrement())
    userId    Int
    activity  Json
    createdAt DateTime @default(now())
}
